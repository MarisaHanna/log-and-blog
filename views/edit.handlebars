<article class='edit-post'>
  <h2>Edit Post</h2>
  <form class="edit-post-form">
    <div>
        <label for="post-title">Post Title:</label>
      <input class="input" name="post-title" type="text" value="{{userPosts.title}}"/>
    </div>
    <div>
        <label class='content' for="post-content">Post Content:</label>
      <input class="textarea" name="post-content" type="text" value="{{userPosts.render_text}}"/>
    </div>
    <div class="is-pulled-right">
       created by {{userPosts.user.username}} on {{format_date userPosts.created_at}}
      | {{userPosts.comments.length}} {{format_plural "comment" userPosts.comments.length}}
      {{!-- <a href="/post/{{userPosts.id}}">{{userPosts.comments.length}} {{format_plural "comment" userPosts.comments.length}}</a> --}}
    </div>
    <button type="submit" class="button is-success">save post</button>
    <button type="button" class="button is-danger delete-post-btn">delete post</button>
  </form>
</article>



<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>
